@model UCP_Praktikum.Models.Borrow

@{
    ViewData["Title"] = "Create";
}

<h1>Buat Peminjaman</h1>

<h4>Pinjam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowDate" class="control-label">Waktu Pinjam</label>
                <input asp-for="BorrowDate" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label">Tenggat Waktu</label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Waktu Pengembalian</label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBuku" class="control-label"></label>
                <select asp-for="IdBuku" class ="form-control" asp-items="ViewBag.IdBuku"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPerson" class="control-label"></label>
                <select asp-for="IdPerson" class ="form-control" asp-items="ViewBag.IdPerson"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
