@model UCP_Praktikum.Models.Borrow

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Yakin ingin menghapus data ini?</h3>
<div>
    <h4>Borrow</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Waktu Pinjam")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Tenggat Waktu")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Waktu Pengembalian")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Judul Buku")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdBukuNavigation.JudulBuku)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Nama Member")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPersonNavigation.NmPerson)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBorrow" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> |
        <a asp-action="Index">Kembali ke Daftar</a>
    </form>
</div>
